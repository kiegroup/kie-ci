      "ssh_username": "root",
      "ssh_keypair_name": "jenkins-slave",
      "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
      "user_data_file": "cloud-init-linux",
      "domain_name": "Default"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "ansible/kie-rhel7.yml",
      "groups": [
        "packer"
      ]
    }
  ]
